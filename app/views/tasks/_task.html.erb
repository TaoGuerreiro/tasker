<div class="list-group-item d-flex justify-content-between" data-controller="task" data-id=" <%= task.id %>"> 
    <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id='<%= dom_id(task) %>' data-reflex="change->TaskReflex#toggle" data-id="<%= task.id %>" <%= 'checked' if task.complete? %>>
        <label for="<%= dom_id(task) %>" class="custom-control-label">
            <% if task.complete? %>
                <del>
                    <%= task.name %>
                </del>
            <% else %>
                <%= task.name %>
            <% end %>
        </label>
    </div>
    <div>
        <a href="#" data-action="click->task#delete" data-id="<%= task.id %>">
            <i class="fa fa-times"></i>
        </a>    
    </div>
</div>